        size_hint: 0.98, 0.1
        bold: True
        text: 'Ferramenta de An√°lise de Falhas'
        id: label_main
    ScreenManager:
        pos_hint: {'rigth': 1, 'top': 0.88}
        size_hint: 1, 0.87
        id: screen_manager
        SistemaPage: 
            name: 'sistemapage'
            id: sistemapage
        SelecionarPage:
            name: 'selecionarpage'
